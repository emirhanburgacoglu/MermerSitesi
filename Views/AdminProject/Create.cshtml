@model MermerSitesi.Models.ProjectItem
@{
    ViewData["Title"] = "Yeni Proje";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-globe me-2" style="color: #c9a961;"></i> Yeni Proje Ekle
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label asp-for="Country" class="form-label fw-bold text-muted small">YAPILDIĞI ÜLKE</label>
                            <input asp-for="Country" class="form-control" placeholder="Örn: Hollanda, USA, Katar..." />
                        </div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="TitleTr" class="form-label fw-bold small text-primary">PROJE ADI
                                    (TR)</label>
                                <input asp-for="TitleTr" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="TitleEn" class="form-label fw-bold small text-danger">NAME (EN)</label>
                                <input asp-for="TitleEn" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="TitleNl" class="form-label fw-bold small text-warning">NAAM (NL)</label>
                                <input asp-for="TitleNl" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">PROJE RESİMLERİ (Kapak + Galeri)</label>
                            <input type="file" name="files" class="form-control" accept="image/*" multiple />
                            <div class="form-text">İlk seçilen resim kapak resmi olacaktır. Birden fazla seçebilirsiniz.
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">İPTAL</a>
                            <button type="submit" class="btn btn-dark w-100">KAYDET</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>