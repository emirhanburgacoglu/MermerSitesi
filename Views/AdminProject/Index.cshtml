@model IEnumerable<MermerSitesi.Models.ProjectItem>

@{ ViewData["Title"] = "Proje Yönetimi"; }

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Proje Listesi</h2>
            <p class="text-muted">Tamamlanan projeleri ve referansları buradan yönetin.</p>
        </div>
        <a asp-action="Create" class="btn btn-black bg-dark text-white rounded-0">
            <i class="fas fa-plus me-2"></i> Yeni Proje Ekle
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4">Görsel</th>
                        <th class="py-3">Proje Adı (TR)</th>
                        <th class="py-3">Project Name (EN)</th>
                        <th class="py-3">Tarih</th>
                        <th class="py-3 text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4">
                                @if(!string.IsNullOrEmpty(item.ImageUrl)) {
                                    <img src="@item.ImageUrl" class="rounded shadow-sm" style="width: 60px; height: 40px; object-fit: cover;">
                                } else {
                                    <div class="bg-secondary rounded d-flex align-items-center justify-content-center text-white" style="width: 60px; height: 40px;"><i class="fas fa-image"></i></div>
                                }
                            </td>
                            <td class="fw-bold text-dark">@item.TitleTr</td>
                            <td class="text-muted">@item.TitleEn</td>
                            <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1"><i class="fas fa-eye"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>