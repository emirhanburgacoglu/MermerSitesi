@model IEnumerable<MermerSitesi.Models.ProjectItem>

@{
    ViewData["Title"] = "Proje Yönetimi";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0" style="font-family: 'Montserrat', sans-serif;">Proje Yönetimi</h2>
            <p class="text-muted small">Referans projelerinizi üç dilde (TR, EN, NL) buradan takip edebilirsiniz.</p>
        </div>
        <a asp-action="Create" class="btn btn-dark rounded-0 px-4">
            <i class="fas fa-plus me-2" style="color: #c9a961;"></i> Yeni Proje Ekle
        </a>
    </div>

    <div class="card shadow-sm border-0" style="border-radius: 10px;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4" style="width: 100px;">Görsel</th>
                            <th class="py-3">Proje Adı (TR)</th>
                            <th class="py-3">Project Name (EN)</th>
                            <th class="py-3">Project Naam (NL)</th> @* Yeni eklendi *@
                            <th class="py-3">Tarih</th>
                            <th class="py-3 text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.CreatedDate))
                        {
                            <tr>
                                <td class="ps-4">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" class="rounded shadow-sm"
                                            style="width: 70px; height: 50px; object-fit: cover; border: 1px solid #eee;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted"
                                            style="width: 70px; height: 50px; border: 1px solid #eee;">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                </td>
                                <td class="fw-bold text-dark">@item.TitleTr</td>
                                <td class="text-muted small">@item.TitleEn</td>
                                <td class="text-muted small">@item.TitleNl</td> @* Yeni eklendi *@
                                <td class="small text-secondary">
                                    <i class="far fa-calendar-alt me-1"></i> @item.CreatedDate.ToString("dd.MM.yyyy")
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white border"
                                            title="Düzenle">
                                            <i class="fas fa-edit text-primary"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white border"
                                            title="Detay">
                                            <i class="fas fa-eye text-info"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white border"
                                            title="Sil">
                                            <i class="fas fa-trash-alt text-danger"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-white {
        background: #fff;
    }

    .btn-white:hover {
        background: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(201, 169, 97, 0.05);
    }
</style>