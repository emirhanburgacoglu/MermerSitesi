@model MermerSitesi.Models.ProjectItem

@{ ViewData["Title"] = "Proje Detayı"; }

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-info-circle text-info me-2"></i> Proje Detayları</h5>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Listeye Dön</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 text-center mb-4 mb-md-0">
                            @if(!string.IsNullOrEmpty(Model.ImageUrl)) {
                                <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm">
                            } else {
                                <div class="alert alert-secondary">Görsel Yok</div>
                            }
                        </div>
                        <div class="col-md-7">
                            <h4 class="fw-bold text-dark">@Model.TitleTr</h4>
                            <p class="text-muted">@Model.ContentTr</p>
                            <hr>
                            <h5 class="fw-bold text-secondary">@Model.TitleEn</h5>
                            <p class="text-muted fst-italic">@Model.ContentEn</p>
                            
                            <div class="mt-4">
                                <small class="text-muted d-block">Eklenme Tarihi: @Model.CreatedDate.ToString("dd MMMM yyyy HH:mm")</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 py-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 me-2">Düzenle</a>
                    <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#delModal">Sil</button>
                </div>
            </div>
        </div>
    </div>
</div>