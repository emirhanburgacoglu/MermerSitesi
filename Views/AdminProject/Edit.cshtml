@model MermerSitesi.Models.ProjectItem

@{ ViewData["Title"] = "Projeyi Düzenle"; }

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-edit me-2"></i> Projeyi Düzenle</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" /> <input type="hidden" asp-for="CreatedDate" />

                        <div class="row g-3">
                            <div class="col-12 bg-light p-3 rounded mb-2 border">
                                <label class="fw-bold mb-2 text-primary">TÜRKÇE</label>
                                <div class="mb-3">
                                    <label asp-for="TitleTr" class="form-label">Proje Adı</label>
                                    <input asp-for="TitleTr" class="form-control" />
                                </div>
                                <div>
                                    <label asp-for="ContentTr" class="form-label">Açıklama</label>
                                    <textarea asp-for="ContentTr" class="form-control" rows="4"></textarea>
                                </div>
                            </div>

                            <div class="col-12 bg-light p-3 rounded mb-2 border">
                                <label class="fw-bold mb-2 text-danger">ENGLISH</label>
                                <div class="mb-3">
                                    <label asp-for="TitleEn" class="form-label">Project Name</label>
                                    <input asp-for="TitleEn" class="form-control" />
                                </div>
                                <div>
                                    <label asp-for="ContentEn" class="form-label">Description</label>
                                    <textarea asp-for="ContentEn" class="form-control" rows="4"></textarea>
                                </div>
                            </div>

                            <div class="col-12 mt-3">
                                <label class="form-label fw-bold">Görseli Güncelle</label>
                                @if(!string.IsNullOrEmpty(Model.ImageUrl)) {
                                    <div class="mb-2">
                                        <img src="@Model.ImageUrl" style="height: 100px;" class="rounded border shadow-sm">
                                    </div>
                                }
                                <input type="file" name="file" class="form-control" accept="image/*" />
                                <div class="form-text">Değiştirmek istemiyorsanız boş bırakın.</div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">İptal</a>
                            <button type="submit" class="btn btn-primary px-5">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }