@model MermerSitesi.Models.ProjectItem

@{
    ViewData["Title"] = "Projeyi Düzenle";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0" style="border-radius: 15px;">
                <div class="card-header bg-dark text-white py-3" style="border-radius: 15px 15px 0 0;">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-globe me-2" style="color: #c9a961;"></i> Projeyi Düzenle
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @* Gizli Alanlar *@
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <div class="row g-4">
                            <div class="col-12 bg-light p-4 rounded border">
                                <label asp-for="Country" class="form-label fw-bold text-muted small text-uppercase"
                                    style="letter-spacing: 1px;">Yapıldığı Ülke</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i
                                            class="fas fa-map-marker-alt text-danger"></i></span>
                                    <input asp-for="Country" class="form-control border-start-0 ps-0"
                                        placeholder="Örn: Hollanda, USA, Katar..." />
                                </div>
                                <span asp-validation-for="Country" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <div class="p-3 border-top border-primary border-4 bg-light rounded shadow-sm">
                                            <label asp-for="TitleTr"
                                                class="form-label small fw-bold text-primary text-uppercase">Proje Adı
                                                (TR)</label>
                                            <input asp-for="TitleTr" class="form-control form-control-sm" />
                                            <span asp-validation-for="TitleTr" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="p-3 border-top border-danger border-4 bg-light rounded shadow-sm">
                                            <label asp-for="TitleEn"
                                                class="form-label small fw-bold text-danger text-uppercase">Project Name
                                                (EN)</label>
                                            <input asp-for="TitleEn" class="form-control form-control-sm" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="p-3 border-top border-warning border-4 bg-light rounded shadow-sm">
                                            <label asp-for="TitleNl"
                                                class="form-label small fw-bold text-warning text-uppercase">Project
                                                Naam (NL)</label>
                                            <input asp-for="TitleNl" class="form-control form-control-sm" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 mt-3 text-center border-top pt-4">
                                <label class="fw-bold d-block mb-3 text-uppercase small text-muted"
                                    style="letter-spacing: 1px;">Proje Görseli</label>
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="mb-3 position-relative d-inline-block">
                                        <img src="@Model.ImageUrl"
                                            style="height: 180px; width: 280px; object-fit: cover; border: 2px solid #c9a961;"
                                            class="rounded shadow shadow-sm p-1">
                                        <span
                                            class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-dark border border-light">Mevcut</span>
                                    </div>
                                }
                                <div class="input-group mt-2">
                                    <input type="file" name="file"
                                        class="form-control border-0 bg-light py-2 shadow-none" accept="image/*" />
                                    <label class="input-group-text bg-dark text-white border-0"><i
                                            class="fas fa-upload"></i></label>
                                </div>
                                <div class="form-text mt-2 small text-muted italic"><i
                                        class="fas fa-info-circle me-1"></i> Görseli değiştirmek istemiyorsanız bu alanı
                                    boş bırakın.</div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-5">
                            <a asp-action="Index"
                                class="btn btn-outline-secondary w-100 py-3 fw-bold text-uppercase small shadow-sm">Vazgeç</a>
                            <button type="submit" class="btn btn-dark w-100 py-3 fw-bold text-uppercase small shadow-sm"
                                style="background-color: #1a1a1a;">
                                <i class="fas fa-sync-alt me-2 text-warning"></i> Değişiklikleri Uygula
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}