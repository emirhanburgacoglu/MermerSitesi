@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<MermerSitesi.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["About"];
}

<div class="page-header about-header d-flex align-items-center justify-content-center mb-5">
    <div class="text-center text-white position-relative z-index-1">
        <h1 class="display-3 fw-bold" style="font-family: 'Times New Roman', serif; letter-spacing: 3px;">@Localizer["OurStory"]</h1>
        <div class="divider mx-auto bg-white mt-3" style="width: 80px; height: 3px;"></div>
        <p class="mt-3 lead text-uppercase" style="letter-spacing: 2px; font-size: 0.9rem;">@Localizer["ProcessingArtOfNature"]</p>
    </div>
    <div class="overlay"></div>
</div>

<div class="container mb-5">
    <div class="row align-items-center gx-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <div class="position-relative">
                <img src="https://images.unsplash.com/photo-1615873968403-89e068629265?q=80&w=1000&auto=format&fit=crop" 
     class="img-fluid shadow-lg" 
     alt="Mermer Ocağı">
                <div class="bg-black text-white p-4 shadow position-absolute d-none d-md-block" style="bottom: -20px; right: -20px; max-width: 250px;">
                    <p class="mb-0 fw-bold small text-uppercase" style="letter-spacing: 1px;">"@Localizer["TouchingHeartOfStone"]"</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <h2 class="display-6 fw-bold mb-4" style="font-family: 'Times New Roman', serif;">@Localizer["WhoIsHollandStone"]</h2>
            
            <p class="text-muted" style="line-height: 1.8; text-align: justify;">
                @Localizer["AboutText1"]
            </p>
            <p class="text-muted" style="line-height: 1.8; text-align: justify;">
                @Localizer["AboutText2"]
            </p>

            <div class="row mt-5 text-center">
                <div class="col-4 border-end">
                    <h3 class="fw-bold display-6">15+</h3>
                    <span class="small text-uppercase text-muted">@Localizer["YearsExperience"]</span>
                </div>
                <div class="col-4 border-end">
                    <h3 class="fw-bold display-6">500+</h3>
                    <span class="small text-uppercase text-muted">@Localizer["CompletedProjects"]</span>
                </div>
                <div class="col-4">
                    <h3 class="fw-bold display-6">50</h3>
                    <span class="small text-uppercase text-muted">@Localizer["ExportCountries"]</span>
                </div>
            </div>
        </div>
    </div>
</div>