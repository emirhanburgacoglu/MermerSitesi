@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<MermerSitesi.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["About"];
}

<div class="page-header about-header d-flex align-items-center justify-content-center mb-5"
    style="background-image: url('/images/AboutAs.jpg'); background-size: cover; background-position: center; background-attachment: fixed; height: 400px; width: 100vw; margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%); position: relative;">

    <div class="text-center text-white position-relative z-index-1">
        <h1 class="display-3 fw-bold" style="font-family: 'Times New Roman', serif; letter-spacing: 3px;">
            @Localizer["OurStory"]
        </h1>
        <div class="divider mx-auto bg-white mt-3" style="width: 80px; height: 3px;"></div>
        <p class="mt-3 lead text-uppercase" style="letter-spacing: 2px; font-size: 0.9rem;">
            @Localizer["ProcessingArtOfNature"]
        </p>
    </div>

    <div class="overlay"
        style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.3); z-index: 0;">
    </div>
</div>

<div class="container mb-5">
    <div class="row align-items-center gx-5">
        <div class="col-lg-5 mb-4 mb-lg-0">
            <div class="position-relative mx-auto" style="max-width: 500px;"> <img src="/images/AboutAs2.jpg"
                    class="img-fluid shadow-lg rounded" style="max-height: 450px; width: 100%; object-fit: cover;"
                    alt="Mermer Ocağı">

                <div class="bg-black text-white p-3 shadow position-absolute d-none d-md-block"
                    style="bottom: 20px; right: -15px; max-width: 200px; border-left: 3px solid #c9a961;">
                    <p class="mb-0 fw-bold" style="letter-spacing: 1px; font-size: 0.75rem; text-transform: uppercase;">
                        "@Localizer["TouchingHeartOfStone"]"
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-7 text-center">
            <h2 class="display-6 fw-bold mb-4" style="font-family: 'Times New Roman', serif;">
                @Localizer["WhoIsHollandStone"]
            </h2>

            <div style="max-width: 480px; height: 3px; background-color: #c9a961; margin: 20px auto;">
            </div>

            <p class="text-muted" style="line-height: 1.8; text-align: justify; font-size: 0.95rem;">
                @Localizer["AboutText1"]
            </p>

            <p class="text-muted" style="line-height: 1.8; text-align: justify; font-size: 0.95rem;">
                @Localizer["AboutText2"]
            </p>
        </div>
    </div>
</div>