@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<MermerSitesi.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["About"];
}

<div class="page-header about-header d-flex align-items-center justify-content-center mb-5"
    style="background-image: url('/images/MermerOcagı.png'); background-size: cover; background-position: center; background-attachment: fixed; height: 400px; width: 100vw; margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%); position: relative;">

    <div class="text-center text-white position-relative z-index-1">
        <h1 class="display-3 fw-bold" style="font-family: 'Times New Roman', serif; letter-spacing: 3px;">
            @Localizer["OurStory"]
        </h1>
        <div class="divider mx-auto bg-white mt-3" style="width: 80px; height: 3px;"></div>
        <p class="mt-3 lead text-uppercase" style="letter-spacing: 2px; font-size: 0.9rem;">
            @Localizer["ProcessingArtOfNature"]
        </p>
    </div>

    <div class="overlay"
        style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.5); z-index: 0;">
    </div>
</div>

<div class="container mb-5">
    <div class="row align-items-center gx-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <div class="position-relative">
                <img src="https://images.unsplash.com/photo-1615873968403-89e068629265?q=80&w=1000&auto=format&fit=crop"
                    class="img-fluid shadow-lg" alt="Mermer Ocağı">
                <div class="bg-black text-white p-4 shadow position-absolute d-none d-md-block"
                    style="bottom: -10px; right: -20px; max-width: 250px;">
                    <p class="mb-0 fw-bold small text-uppercase" style="letter-spacing: 1px;">
                        "@Localizer["TouchingHeartOfStone"]"</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <h2 class="display-6 fw-bold mb-4" style="font-family: 'Times New Roman', serif;">
                @Localizer["WhoIsHollandStone"]</h2>
            <div style="width: 550px; height: 3px; background-color: #c9a961; margin: 20px auto;"></div>
            <p class="text-muted" style="line-height: 1.8; text-align: justify;">
                @Localizer["AboutText1"]
            </p>
            <p class="text-muted" style="line-height: 1.8; text-align: justify;">
                @Localizer["AboutText2"]
            </p>


        </div>
    </div>
</div>