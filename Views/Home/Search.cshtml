@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<MermerSitesi.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Search"];
    // Controller'dan gelen aranan kelimeyi alıyoruz
    string query = ViewData["Query"] as string ?? "";
}

<div class="bg-light py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-5 fw-bold" style="font-family: 'Times New Roman', serif;">@Localizer["Search"]</h1>
        <p class="lead text-muted">"@query" için sonuçlar listeleniyor.</p>
    </div>
</div>

<div class="container mb-5" style="min-height: 300px;">
    
    <div class="alert alert-light border text-center shadow-sm p-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h4 class="fw-bold">Arama Sonuçları</h4>
        <p class="text-muted">
            Şu an <strong>"@query"</strong> araması yaptınız.
            <br>
            Veritabanı bağlantısını kurduğumuzda burada, aradığınız kelimeye uygun gerçek ürünler listelenecektir.
        </p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-dark rounded-0 mt-3">ANA SAYFAYA DÖN</a>
    </div>

</div>