@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IHtmlLocalizer<MermerSitesi.SharedResource> Localizer
@model IEnumerable<MermerSitesi.Models.Product>

@{
    string categorySlug = (ViewData["CategorySlug"] as string ?? "").ToLower();
    string categoryTitle = "";
    string headerImage = "";

    // Kategoriye göre başlık ve resim
    switch (categorySlug)
    {
        case "travertine":
            categoryTitle = Localizer["Travertine"].Value;
            headerImage = "/images/travertine-header.jpg";
            break;
        case "marble":
            categoryTitle = Localizer["Marble"].Value;
            headerImage = "/images/marble-header.jpg";
            break;
        case "limestone":
            categoryTitle = Localizer["Limestone"].Value;
            headerImage = "/images/limestone-header.jpg";
            break;
        case "onyx":
            categoryTitle = Localizer["Onyx"].Value;
            headerImage = "/images/onyx-header.jpg";
            break;
        default:
            categoryTitle = Localizer["Collection"].Value;
            headerImage = "/images/collection-header.jpg";
            break;
    }

    ViewData["Title"] = categoryTitle;

    // DİL KONTROLÜ
    bool isTurkish = CultureInfo.CurrentCulture.Name.StartsWith("tr");
}

<style>
    /* KART GENEL YAPISI */
    .luxury-card {
        background: #fff;
        border: 1px solid #e0e0e0;
        padding: 15px;
        transition: all 0.4s ease;
        height: 100%;
        position: relative;
    }

    .luxury-card:hover {
        border-color: #c9a961;
        transform: translateY(-3px);
    }

    /* RESİM ALANI */
    .luxury-image-wrapper {
        position: relative;
        overflow: hidden;
        aspect-ratio: 1/1;
        background-color: #f9f9f9;
        cursor: pointer;
    }

    .luxury-image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 1s ease;
        filter: brightness(0.95);
    }

    .luxury-card:hover .luxury-image-wrapper img {
        transform: scale(1.08);
        filter: brightness(0.8);
    }

    /* İNCELE BUTONU */
    .zoom-btn {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0.8);
        background-color: rgba(255, 255, 255, 0.9);
        color: #1a1a1a;
        border: none;
        padding: 12px 25px;
        text-transform: uppercase;
        font-family: 'Times New Roman', serif;
        font-weight: bold;
        letter-spacing: 2px;
        font-size: 0.8rem;
        opacity: 0;
        transition: all 0.3s ease;
        z-index: 10;
        cursor: pointer;
        white-space: nowrap;
    }

    .luxury-card:hover .zoom-btn {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }

    .zoom-btn:hover {
        background-color: #c9a961;
        color: #fff;
    }

    /* MARKA VE BAŞLIK */
    .brand-name {
        color: #999;
        font-family: 'Times New Roman', serif;
        font-size: 0.7rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        display: block;
        margin-bottom: 5px;
        margin-top: 15px;
    }

    .luxury-title {
        font-family: 'Times New Roman', serif;
        font-weight: 600;
        color: #000 !important;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        margin-bottom: 0;
        text-decoration: none !important;
        display: inline-block;
    }

    /* LIGHTBOX */
    .lightbox-modal {
        display: none;
        position: fixed;
        z-index: 10000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.96);
        align-items: center;
        justify-content: center;
        animation: fadeIn 0.3s;
        cursor: zoom-out;
    }

    .lightbox-content {
        max-width: 90vw;
        max-height: 90vh;
        object-fit: contain;
    }

    .close-lightbox {
        position: absolute;
        top: 20px;
        right: 40px;
        color: #fff;
        font-size: 60px;
        cursor: pointer;
    }

    /* UYARI NOTU STİLİ */
    .natural-stone-disclaimer {
        border: 1px solid #e0e0e0;
        border-top: 3px solid #c9a961;
        background-color: #fcfcfc;
        border-radius: 4px;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>

<div class="page-header d-flex align-items-center justify-content-center mb-5"
    style="background-image: url('@headerImage'); background-size: cover; background-position: center; min-height: 300px; position: relative;">
    <div class="text-center text-white position-relative z-index-1">
        <h1 class="display-3 fw-bold text-uppercase"
            style="font-family: 'Times New Roman', serif; letter-spacing: 3px;">@categoryTitle</h1>
        <div class="divider mx-auto bg-white mt-3" style="width: 80px; height: 3px;"></div>
        <p class="mt-3 lead text-uppercase" style="letter-spacing: 2px; font-size: 0.9rem;">
            @Localizer["DiscoverCollection"]
        </p>
    </div>
    <div class="overlay"
        style="background: rgba(0,0,0,0.4); position: absolute; top:0; left:0; width:100%; height:100%;"></div>
</div>

<div class="container mb-5">
    @if (!Model.Any())
    {
        <div class="alert alert-light text-center border p-5 shadow-sm rounded-3">
            <i class="fas fa-search fa-3x mb-3" style="color: #c9a961;"></i>
            <h4 class="fw-bold">@categoryTitle @Localizer["NoProductsFound"]</h4>
            <p class="text-muted">@Localizer["PleaseCheckBackLater"]</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-6 mb-4">
                    <div class="luxury-card">
                        <div class="luxury-image-wrapper" onclick="openLightbox('@item.ImageUrl')">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.NameTr">
                                <button class="zoom-btn" onclick="openLightbox('@item.ImageUrl'); event.stopPropagation();">
                                    <i class="fas fa-search-plus me-2"></i> @Localizer["ViewDetails"]
                                </button>
                            }
                            else
                            {
                                <img src="/images/no-image.png" alt="No Image" style="opacity:0.6;">
                            }
                        </div>

                        <div class="text-center">
                            <span class="brand-name">R & Y STONE</span>
                            <a asp-action="Details" asp-route-id="@item.Id" class="luxury-title">
                                @(isTurkish? item.NameTr: item.NameEn)
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="p-4 rounded-3 shadow-sm position-relative overflow-hidden"
                style="background-color: #fcfbf7; border: 1px solid #e9ecef; border-left: 5px solid #c9a961;">

                <div class="row align-items-center">
                    <div class="col-md-auto text-center mb-3 mb-md-0">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto"
                            style="width: 60px; height: 60px; background-color: rgba(201, 169, 97, 0.1);">
                            <i class="fas fa-pen-ruler" style="color: #c9a961; font-size: 1.5rem;"></i>
                        </div>
                    </div>

                    <div class="col-md">
                        <p class="mb-2 text-muted" style="font-size: 1.1rem; line-height: 1.6; font-weight: 500;">
                            @Localizer["CustomProductionNote"]
                        </p>

                        <div class="pt-2 mt-2" style="border-top: 1px solid rgba(0,0,0,0.05);">
                            <p class="text-muted mb-0"
                                style="font-family: 'Times New Roman', serif; font-size: 0.8rem; opacity: 0.8;">
                                <i class="fas fa-info-circle me-1" style="color: #c9a961;"></i>
                                @Localizer["NaturalStoneWarning"]
                            </p>
                        </div>
                    </div>
                </div>

                <i class="fas fa-ruler-combined position-absolute"
                    style="right: -10px; bottom: -15px; font-size: 6rem; color: #000; opacity: 0.03; transform: rotate(-15deg);"></i>
            </div>
        </div>
    </div>
</div>
<script>
    function openLightbox(imageUrl) {
        var modal = document.getElementById("myLightbox");
        var modalImg = document.getElementById("img01");
        modal.style.display = "flex";
        modalImg.src = imageUrl;
    }

    function closeLightbox() {
        var modal = document.getElementById("myLightbox");
        modal.style.display = "none";
    }

    document.addEventListener('keydown', function (event) {
        if (event.key === "Escape") {
            closeLightbox();
        }
    });
</script>
<div id="myLightbox" class="lightbox-modal" onclick="closeLightbox()">
    <span class="close-lightbox" onclick="closeLightbox()">&times;</span>
    <img class="lightbox-content" id="img01">
</div>