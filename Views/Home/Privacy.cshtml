@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<MermerSitesi.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["PrivacyPolicy"];
}

<section class="py-5 mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <h1 class="display-6 fw-bold font-serif mb-4" style="color: #1a1a1a;">@Localizer["PrivacyPolicy"]</h1>
                <div class="divider-gold mb-5" style="width: 80px; height: 3px; background-color: #c9a961;"></div>

                <div class="legal-text text-muted" style="line-height: 1.8; font-size: 1rem;">
                    @* İçerik Resource dosyasından gelecek *@
                    @Html.Raw(Localizer["PrivacyFullContent"].Value)
                </div>
            </div>
        </div>
    </div>
</section>