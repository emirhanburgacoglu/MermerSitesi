@{
    ViewData["Title"] = "Blog";
}

<div class="page-header blog-header d-flex align-items-center justify-content-center mb-5">
    <div class="text-center text-white position-relative z-index-1">
        <h1 class="display-3 fw-bold" style="font-family: 'Times New Roman', serif; letter-spacing: 3px;">BLOG</h1>
        <div class="divider mx-auto bg-white mt-3" style="width: 80px; height: 3px;"></div>
        <p class="mt-3 lead text-uppercase" style="letter-spacing: 2px; font-size: 0.9rem;">Trendler, İpuçları ve Haberler</p>
    </div>
    <div class="overlay"></div>
</div>

