@model MermerSitesi.ViewModels.HomeCollectionViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<MermerSitesi.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Home"];
    // Mevcut dil kodunu alıyoruz (tr, en veya nl)
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
}

<style>
    /* Kayan Şerit Kapsayıcısı */
    .marquee-slider {
        overflow: hidden;
        width: 100%;
        position: relative;
        padding: 20px 0;
    }

    /* Kayan Ray */
    .marquee-track {
        display: flex;
        width: max-content;
        gap: 30px;
        animation: scroll 35s linear infinite;
        /* Hızı biraz yavaşlattık */
    }

    .marquee-track:hover {
        animation-play-state: paused;
    }

    .slide-item {
        width: 300px;
        flex-shrink: 0;
    }

    @@keyframes scroll {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
    }

    /* LÜKS KART TASARIMI */
    .product-card {
        background: #fff;
        border: 1px solid #e0e0e0 !important;
        transition: all 0.4s ease;
        padding: 12px;
    }

    .product-card:hover {
        border-color: #c9a961 !important;
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }

    .brand-name {
        color: #999;
        font-family: 'Times New Roman', serif;
        font-size: 0.65rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        display: block;
        margin-bottom: 5px;
    }

    .card-title {
        font-family: 'Times New Roman', serif;
        font-weight: 600;
        color: #1a1a1a;
        letter-spacing: 1px;
    }
</style>

<div class="container-fluid p-0 mb-5">
    <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="5000">
                <img src="https://images.unsplash.com/photo-1600607686527-6fb886090705?q=80&w=2000&auto=format&fit=crop"
                    class="d-block w-100" style="height: 600px; object-fit: cover;" alt="Hero">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 p-4 rounded">
                    <h2 class="display-4 fw-bold" style="font-family: 'Cormorant Garamond', serif;">
                        @Localizer["ProcessingArtOfNature"]</h2>
                    <p class="lead" style="font-style: italic;">@Localizer["TouchingHeartOfStone"]</p>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="py-5 bg-white">
    <div class="container text-center">
        <h1 class="display-5 fw-bold mb-4" style="font-family: 'Cormorant Garamond', serif;">
            R<span style="color: #c9a961; font-style: italic; margin: 0 8px;">&</span>Y Stone Export
        </h1>
        <p class="text-muted lead fs-5" style="line-height: 1.8;">
            @Html.Raw(Localizer["HomeDescription"])
        </p>
    </div>
</section>

