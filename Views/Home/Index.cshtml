            <h2 class="display-6 fw-bold text-uppercase"
                style="font-family: 'Times New Roman', serif; letter-spacing: 3px;">@Localizer["Collection"]</h2>
            <div style="width: 60px; height: 3px; background-color: #c9a961; margin: 20px auto;"></div>
        </div>

        @* --- 1. TRAVERTINE --- *@
        @if (Model.Travertines != null && Model.Travertines.Any())
        {
            <div class="category-block mb-5">
                <div class="container d-flex justify-content-between align-items-end mb-4 border-bottom pb-2">
                    <h3 class="h4 fw-bold text-uppercase m-0" style="font-family: 'Times New Roman', serif;">
                        @Localizer["Travertine"]</h3>
                    <a asp-controller="Home" asp-action="Collection" asp-route-id="travertine"
                        class="text-decoration-none text-dark small fw-bold">
                        @Localizer["Show"] <i class="fas fa-arrow-right ms-1 text-warning"></i>
                    </a>
                </div>
                <div class="marquee-slider">
                    <div class="marquee-track">
                        @for (int i = 0; i < 2; i++)
                        {
                            @foreach (var item in Model.Travertines)
                            {
                                <div class="slide-item">
                                    <div class="card h-100 border-0 shadow-sm product-card">
                                        <div class="overflow-hidden" style="height: 250px;">
                                            <img src="@item.ImageUrl" class="card-img-top w-100 h-100" style="object-fit: cover;"
                                                alt="@item.NameTr">
                                        </div>
                                        <div class="card-body text-center p-3">
                                            <span class="brand-name">R & Y STONE</span>
                                            <h5 class="card-title fs-6 text-uppercase m-0">
                                                @if (currentCulture.StartsWith("tr"))
                                                {
                                                    @item.NameTr
                                                }
                                                else if (currentCulture.StartsWith("nl"))
                                                {

                                                    @item.NameNl
                                                }
                                                else
                                                {

                                                    @item.NameEn
                                                }
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
