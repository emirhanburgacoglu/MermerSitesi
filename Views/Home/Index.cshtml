@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<MermerSitesi.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Home"];
}

<style>
    .slider-area {
        overflow: hidden; /* Dışarı taşanları gizle */
        padding: 40px 0;
        background: #fff;
        position: relative;
    }

    .slider-track {
        display: flex;
        width: max-content; /* İçerik kadar genişle */
        animation: scroll 20s linear infinite; /* 20 saniyede bir tur at */
    }

    /* Mouse üzerine gelince akış dursun */
    .slider-track:hover {
        animation-play-state: paused;
    }

    .single-slide {
        width: 280px; /* Her bir kutunun genişliği */
        margin: 0 15px; /* Kutular arası boşluk */
        flex-shrink: 0; /* Küçülmeyi engelle */
        text-align: center;
        cursor: pointer;
    }

    .single-slide img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .single-slide:hover img {
        transform: scale(1.03); /* Mouse gelince çok hafif büyüsün */
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .slide-title {
        margin-top: 15px;
        font-weight: 600;
        text-transform: uppercase;
        color: #333;
        letter-spacing: 1px;
    }

    /* Animasyonun Kendisi */
    @@keyframes scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); } /* İçeriğin yarısı kadar kaydır (çünkü 2 set var) */
    }
    /* --- MERMER ÇEŞİTLERİ İÇİN YENİ YAZI STİLİ --- */
/* Bu sınıfı, ürün kartlarının altındaki h6 başlıklarına vereceğiz.
   Eğer zaten bir sınıfı varsa (örn: .product-title), onu bulup bu stillerle güncellemelisin.
*/
h6.modern-stone-title {
    /* Modern ve zarif bir font ailesi */
    font-family: 'Montserrat', 'Helvetica Neue', Helvetica, Arial, sans-serif; 

    /* Yazı rengi: Tam siyah yerine koyu antrasit daha yumuşak ve modern durur */
    color: #2c3e50;

    /* Yazı boyutu ve kalınlığı */
    font-size: 1.1rem; /* Biraz daha büyük */
    font-weight: 600; /* Orta kalınlıkta */

    /* Metin hizalama ve dönüşüm */
    text-align: center; /* Ortala */
    text-transform: uppercase; /* Tümü büyük harf */

    /* Harfler arası boşluk: Zarafet katar */
    letter-spacing: 1.5px;

    /* Kenar boşlukları */
    margin-top: 20px; /* Resimden biraz uzaklaşsın */
    margin-bottom: 10px;

    /* Altına dekoratif ince bir çizgi ekleyelim */
    position: relative;
    padding-bottom: 10px;
}

/* Alt çizginin kendisi (pseudo-element) */
h6.modern-stone-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%; /* Ortadan başla */
    transform: translateX(-50%); /* Tam merkeze hizala */
    width: 40px; /* Çizginin uzunluğu */
    height: 2px; /* Çizginin kalınlığı */
    background-color: #d4af37; /* Altın rengi (Mermerle uyumlu) */
    /* İstersen gri de yapabilirsin: background-color: #ccc; */
}
</style>

