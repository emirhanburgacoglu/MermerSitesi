@model MermerSitesi.ViewModels.HomeCollectionViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<MermerSitesi.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Home"];
    // Mevcut dil kodunu alıyoruz (tr, en veya nl)
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
}

<style>
    /* Kayan Şerit Kapsayıcısı */
    .marquee-slider {
        overflow: hidden;
        width: 100%;
        position: relative;
        padding: 20px 0;
    }

    /* Kayan Ray */
    .marquee-track {
        display: flex;
        width: max-content;
        gap: 30px;
        animation: scroll 35s linear infinite;
        /* Hızı biraz yavaşlattık */
    }

    .marquee-track:hover {
        animation-play-state: paused;
    }

    .slide-item {
        width: 300px;
        flex-shrink: 0;
    }

    @@keyframes scroll {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
    }

    /* LÜKS KART TASARIMI */
    .product-card {
        background: #fff;
        border: 1px solid #e0e0e0 !important;
        transition: all 0.4s ease;
        padding: 12px;
    }

    .product-card:hover {
        border-color: #c9a961 !important;
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }

    .brand-name {
        color: #999;
        font-family: 'Times New Roman', serif;
        font-size: 0.65rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        display: block;
        margin-bottom: 5px;
    }

    .card-title {
        font-family: 'Times New Roman', serif;
        font-weight: 600;
        color: #1a1a1a;
        letter-spacing: 1px;
    }

    /* Carousel resimlerine sinematik yavaş zoom (Ken Burns) efekti */
    .carousel-item img {
        transition: transform 10s linear !important;
        transform: scale(1);
    }

    .carousel-item.active img {
        transform: scale(1.15);
        /* Resim aktif olduğunda %15 büyür */
    }

    /* Geçiş hızını yumuşatma (Fade efekti için) */
    .carousel-fade .carousel-item {
        transition-duration: 2s !important;
        /* Geçiş süresini 2 saniyeye çıkarıyoruz */
    }

    /* Yazıların (Caption) daha zarif gelmesi */
    .carousel-caption {
        opacity: 0;
        transform: translateY(20px);
        transition: all 1s ease-in-out 0.5s;
        /* 0.5 saniye rötarla süzülerek gelir */
    }

    .active .carousel-caption {
        opacity: 1;
        transform: translateY(0);
    }
</style>
