<style>
    /* Kayan Şerit Kapsayıcısı */
    .marquee-slider {
        overflow: hidden;
        width: 100%;
        position: relative;
        padding: 10px 0;
        /* Kart gölgeleri kesilmesin diye boşluk */
    }

    /* Kayan Ray */
    .marquee-track {
        display: flex;
        width: max-content;
        gap: 24px;
        /* Kartlar arası boşluk (g-4 yerine) */
        animation: scroll 15s linear infinite;
        /* Hız ayarı: 35s */
    }

    /* Mouse üzerine gelince durdur */
    .marquee-track:hover {
        animation-play-state: paused;
    }

    /* Tekil Ürün Kutusu Genişliği */
    .slide-item {
        width: 280px;
        /* Kart genişliği */
        flex-shrink: 0;
    }

    /* Animasyon Tanımı (Razor uyumlu @@ ile) */
    @@keyframes scroll {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
    }

    /* SENİN MEVCUT CSS'LERİN */
    .product-card:hover img {
        transform: scale(1.05);
    }

    .product-card {
        transition: transform 0.3s;
    }

    .product-card:hover {
        transform: translateY(-5px);
    }

    .card-title {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .category-block a:hover i {
        transform: translateX(3px);
        transition: transform 0.3s ease;
    }

    .product-card:hover .card-title {
        color: #c9a961;
        transition: color 0.3s ease;
    }
</style>

