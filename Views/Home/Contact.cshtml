@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<MermerSitesi.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Contact"];
}

<div class="contact-header d-flex align-items-center justify-content-center mb-5">
    <div class="text-center text-white position-relative z-index-1">
        <h1 class="display-3 fw-bold" style="font-family: 'Times New Roman', serif; letter-spacing: 3px;">@Localizer["Contact"]</h1>
        <div class="divider mx-auto bg-white mt-3" style="width: 80px; height: 3px;"></div>
        <p class="mt-3 lead text-uppercase" style="letter-spacing: 2px; font-size: 0.9rem;">@Localizer["LetsBringProjectsToLife"]</p>
    </div>
    <div class="overlay"></div>
</div>

<div class="container mb-5">
    <div class="row gx-5">
        
        <div class="col-lg-5 mb-5 mb-lg-0">
            <div class="p-4 bg-light h-100 border-start border-5 border-dark shadow-sm">
                <h3 class="h4 mb-4 text-uppercase fw-bold" style="font-family: 'Times New Roman', serif;">@Localizer["HeadOffice"]</h3>
                
                <div class="d-flex align-items-start mb-4">
                    <div class="icon-box bg-white shadow-sm text-dark me-3 rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                        <i class="fas fa-map-marker-alt fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">@Localizer["Address"]</h6>
                        <p class="text-muted small mb-0">Ferhatpaşa Mah. Yeditepe Cad. No: 123<br>Ataşehir / İSTANBUL</p>
                    </div>
                </div>

                <div class="d-flex align-items-start mb-4">
                    <div class="icon-box bg-white shadow-sm text-dark me-3 rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                        <i class="fas fa-phone-alt fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">@Localizer["Phone"]</h6>
                        <p class="text-muted small mb-0">+90 216 555 55 55</p>
                    </div>
                </div>

                <div class="d-flex align-items-start mb-4">
                    <div class="icon-box bg-white shadow-sm text-dark me-3 rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                        <i class="fas fa-envelope fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">@Localizer["Email"]</h6>
                        <p class="text-muted small mb-0">info@hollandstone.com</p>
                    </div>
                </div>

                <div class="mt-4 shadow-sm border p-1 bg-white">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3011.650490016624!2d29.1594!3d40.9905!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDDCsDU5JzI1LjgiTiAyOcKwMDknMzMuOCJF!5e0!3m2!1str!2str!4v1630000000000!5m2!1str!2str" 
                            width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="bg-white p-5 shadow-lg position-relative contact-form-wrapper">
                <h3 class="h4 mb-2" style="font-family: 'Times New Roman', serif;">@Localizer["ContactUs"]</h3>
                <p class="text-muted small mb-5">@Localizer["ContactFormDesc"]</p>
                
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="nameInput" placeholder="@Localizer["NameSurname"]">
                                <label for="nameInput">@Localizer["NameSurname"]</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="emailInput" placeholder="@Localizer["YourEmail"]">
                                <label for="emailInput">@Localizer["YourEmail"]</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="subjectInput" placeholder="@Localizer["Subject"]">
                                <label for="subjectInput">@Localizer["Subject"]</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-4">
                                <textarea class="form-control" placeholder="@Localizer["YourMessage"]" id="messageInput" style="height: 150px"></textarea>
                                <label for="messageInput">@Localizer["YourMessage"]</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-dark w-100 py-3 text-uppercase fw-bold" style="letter-spacing: 2px;">
                                @Localizer["Send"] <i class="fas fa-paper-plane ms-2"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>