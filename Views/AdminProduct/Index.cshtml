@model IEnumerable<MermerSitesi.Models.Product>

@{
    ViewData["Title"] = "Ürün Yönetimi";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0" style="font-family: 'Montserrat', sans-serif;">Ürün Listesi</h2>
            <p class="text-muted small">Sitedeki ürünleri (TR, EN, NL) buradan yönetebilirsiniz.</p>
        </div>
        <a asp-action="Create" class="btn btn-dark rounded-0 px-4">
            <i class="fas fa-plus me-2" style="color: #c9a961;"></i> Yeni Ürün Ekle
        </a>
    </div>

    <div class="card shadow-sm border-0" style="border-radius: 10px;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4" style="width: 80px;">Görsel</th>
                            <th class="py-3">Türkçe Ad (TR)</th>
                            <th class="py-3">İngilizce Ad (EN)</th>
                            <th class="py-3">Flemenkçe Ad (NL)</th> @* Yeni eklendi *@
                            <th class="py-3">Kategori</th>
                            <th class="py-3 text-center">Sıra</th>
                            <th class="py-3 text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(x => x.Category).ThenBy(x => x.DisplayOrder))
                        {
                            <tr>
                                <td class="ps-4">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" class="rounded shadow-sm"
                                            style="width: 50px; height: 50px; object-fit: cover; border: 1px solid #eee;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted"
                                            style="width: 50px; height: 50px; border: 1px solid #eee;">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                </td>
                                <td class="fw-bold text-dark" style="font-size: 0.9rem;">@item.NameTr</td>
                                <td class="text-muted" style="font-size: 0.85rem;">@item.NameEn</td>
                                <td class="text-muted" style="font-size: 0.85rem;">@item.NameNl</td> @* Yeni eklendi *@
                                <td>
                                    @* Kategoriye göre renkli badge *@
                                    @{
                                        var badgeClass = item.Category?.ToLower() switch
                                        {
                                            "travertine" => "bg-warning text-dark",
                                            "marble" => "bg-primary",
                                            "onyx" => "bg-dark",
                                            "limestone" => "bg-info text-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass fw-normal px-2 py-1" style="font-size: 0.75rem;">
                                        @item.Category
                                    </span>
                                </td>
                                <td class="text-center fw-bold text-muted">@item.DisplayOrder</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white border"
                                            title="Düzenle">
                                            <i class="fas fa-edit text-primary"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white border"
                                            title="Detay">
                                            <i class="fas fa-eye text-info"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white border"
                                            title="Sil">
                                            <i class="fas fa-trash-alt text-danger"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-white {
        background: #fff;
    }

    .btn-white:hover {
        background: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(201, 169, 97, 0.05);
    }
</style>