@model IEnumerable<MermerSitesi.Models.Product>

@{
    ViewData["Title"] = "Ürün Yönetimi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Ürün Listesi</h2>
            <p class="text-muted">Sitedeki ürünleri buradan yönetebilirsiniz.</p>
        </div>
        <a asp-action="Create" class="btn btn-success rounded-0">
            <i class="fas fa-plus me-2"></i> Yeni Ürün Ekle
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4">Resim</th>
                        <th class="py-3">Türkçe Ad</th>
                        <th class="py-3">İngilizce Ad</th>
                        <th class="py-3">Kategori</th>
                        <th class="py-3">Sıra</th>
                        <th class="py-3 text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4">
                                @if(!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="rounded shadow-sm" style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-secondary rounded d-flex align-items-center justify-content-center text-white" style="width: 50px; height: 50px;">
                                        <i class="fas fa-image"></i>
                                    </div>
                                }
                            </td>
                            <td class="fw-bold text-dark">@item.NameTr</td>
                            <td class="text-muted">@item.NameEn</td>
                            <td>
                                <span class="badge bg-secondary rounded-0">@item.Category</span>
                            </td>
                            <td>@item.DisplayOrder</td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1" title="Detay">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>