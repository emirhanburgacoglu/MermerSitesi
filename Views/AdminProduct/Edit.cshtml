@model MermerSitesi.Models.Product

@{
    ViewData["Title"] = "Ürünü Düzenle";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0" style="border-radius: 15px;">
                <div class="card-header bg-dark text-white py-3" style="border-radius: 15px 15px 0 0;">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-edit me-2" style="color: #c9a961;"></i> Ürünü Düzenle</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />

                        <div class="row g-4">
                            <div class="col-md-4">
                                <label asp-for="NameTr" class="form-label fw-bold text-uppercase small"
                                    style="letter-spacing: 1px;">Ürün Adı (Türkçe)</label>
                                <input asp-for="NameTr" class="form-control border-0 bg-light py-2"
                                    placeholder="Örn: Klasik Traverten" />
                                <span asp-validation-for="NameTr" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="NameEn" class="form-label fw-bold text-uppercase small"
                                    style="letter-spacing: 1px;">Product Name (English)</label>
                                <input asp-for="NameEn" class="form-control border-0 bg-light py-2"
                                    placeholder="Ex: Classic Travertine" />
                                <span asp-validation-for="NameEn" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="NameNl" class="form-label fw-bold text-uppercase small"
                                    style="letter-spacing: 1px;">Product Naam (Dutch)</label>
                                <input asp-for="NameNl" class="form-control border-0 bg-light py-2"
                                    placeholder="Bijv: Klassiek Travertijn" />
                                <span asp-validation-for="NameNl" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label fw-bold text-uppercase small"
                                    style="letter-spacing: 1px;">Kategori</label>
                                <select asp-for="Category" class="form-select border-0 bg-light py-2">
                                    <option value="">Kategori Seçiniz...</option>
                                    <option value="travertine">Travertine (Traverten)</option>
                                    <option value="marble">Marble (Mermer)</option>
                                    <option value="limestone">Limestone (Kireçtaşı)</option>
                                    <option value="onyx">Onyx (Oniks)</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DisplayOrder" class="form-label fw-bold text-uppercase small"
                                    style="letter-spacing: 1px;">Sıralama (Display Order)</label>
                                <input asp-for="DisplayOrder" class="form-control border-0 bg-light py-2"
                                    type="number" />
                                <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
                            </div>

                            <div class="col-12 text-center border-top pt-4">
                                <label class="form-label fw-bold text-uppercase small d-block mb-3"
                                    style="letter-spacing: 1px;">Mevcut Ürün Görseli</label>
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="position-relative d-inline-block">
                                        <img src="@Model.ImageUrl" class="img-thumbnail shadow-sm"
                                            style="height: 200px; width: 200px; object-fit: cover; border-color: #c9a961;">
                                    </div>
                                }
                                else
                                {
                                    <div class="py-4 bg-light rounded text-center">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                        <p class="text-muted small mt-2">Görsel Bulunmuyor</p>
                                    </div>
                                }
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold text-uppercase small"
                                    style="letter-spacing: 1px;">Görseli Değiştir</label>
                                <div class="input-group">
                                    <input type="file" name="file" class="form-control border-0 bg-light py-2"
                                        accept="image/*" />
                                    <label class="input-group-text bg-dark text-white border-0"><i
                                            class="fas fa-upload"></i></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-5">
                            <a asp-action="Index"
                                class="btn btn-outline-secondary w-100 py-2 fw-bold text-uppercase small"
                                style="letter-spacing: 1px;">İptal</a>
                            <button type="submit" class="btn btn-dark w-100 py-2 fw-bold text-uppercase small"
                                style="letter-spacing: 1px; background-color: #1a1a1a;">
                                <i class="fas fa-save me-2"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}