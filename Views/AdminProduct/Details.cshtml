@model MermerSitesi.Models.Product

@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <div class="card shadow border-0 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold text-dark">
                            <i class="fas fa-info-circle me-2 text-info"></i> Ürün Detayları
                        </h5>
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                        </a>
                    </div>
                </div>
                
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-5 bg-light d-flex align-items-center justify-content-center border-end">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid p-3" style="max-height: 400px; object-fit: contain;" alt="@Model.NameTr">
                            }
                            else
                            {
                                <div class="text-center py-5 text-muted">
                                    <i class="fas fa-image fa-4x mb-3"></i>
                                    <p>Görsel Yok</p>
                                </div>
                            }
                        </div>

                        <div class="col-md-7 p-4 p-lg-5">
                            <div class="mb-4">
                                <label class="small text-muted text-uppercase fw-bold ls-1">Ürün Adı (TR)</label>
                                <h3 class="fw-bold text-dark">@Model.NameTr</h3>
                            </div>

                            <div class="mb-4">
                                <label class="small text-muted text-uppercase fw-bold ls-1">Product Name (EN)</label>
                                <h4 class="text-secondary">@Model.NameEn</h4>
                            </div>

                            <div class="row mb-4">
                                <div class="col-6">
                                    <label class="small text-muted text-uppercase fw-bold ls-1">Kategori</label>
                                    <div>
                                        <span class="badge bg-dark rounded-pill px-3 py-2">@Model.Category</span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class="small text-muted text-uppercase fw-bold ls-1">Sıralama</label>
                                    <div class="fs-5 fw-bold">#@Model.DisplayOrder</div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                                    <i class="fas fa-edit me-2"></i> Düzenle
                                </a>
                                <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="fas fa-trash-alt me-2"></i> Sil
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <p class="mb-0"><strong>@Model.NameTr</strong> ürününü silmek istediğinize emin misiniz?</p>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Evet, Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>