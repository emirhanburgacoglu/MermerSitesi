@model MermerSitesi.Models.Product

@{
    ViewData["Title"] = "Ürünü Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 border-top border-5 border-danger">
                <div class="card-body text-center p-5">
                    <i class="fas fa-exclamation-circle text-danger fa-4x mb-4"></i>
                    <h3 class="fw-bold">Emin misiniz?</h3>
                    <p class="text-muted">Aşağıdaki ürünü silmek üzeresiniz. Bu işlem geri alınamaz.</p>
                    
                    <div class="border rounded p-3 my-4 bg-light">
                        @if(!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="img-fluid rounded mb-3" style="max-height: 150px;">
                        }
                        <h5 class="fw-bold mb-1">@Model.NameTr</h5>
                        <p class="text-muted mb-0">@Model.NameEn</p>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 me-2">İptal</a>
                        <button type="submit" class="btn btn-danger px-4">Evet, Sil</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>